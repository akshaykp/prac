<p>
	<strong>Title:</strong>
	<%= @article.title %>
</p>

<p>
	<strong>Text</strong>
	<%= @article.text %>
</p>

<h2>Comments</h2>
	<% @article.comments.each do |comment| %>
	<p>
		<strong>Commenter:</strong>
		<%= comment.commenter %>
	</p>
	<p>
		<strong>Body:</strong>
		<%= comment.body %>
	</p>
	<% end %>


	

<h2>Adding Comment</h2>
<%= form_for([@article, @comment]) do |f| %>
